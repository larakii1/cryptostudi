{{ include('_navbar.html.twig') }}
<!DOCTYPE html>
<html>

	<style>
		body {
			background-color: rgb(16, 15, 15);
		}


		h1 {}

		#transaction_delete_quantity {
			position: relative;
			top: 20px;
		}

		#transaction_delete_ajouter {
			position: relative;
			top: 30px;
		}

		.transaction {
			display: flex;
			flex-direction: column;
			align-items: center;
			margin-top: 7%;
			color: #efefef
		}

		@media(max-width: 740px) {
			#transaction_delete_ajouter {
				position: relative;
				left: 38%;
			}
		}

		@media(min-width: 1903px) {
			#transaction_delete_ajouter {
				position: relative;
				left: 5%;
			}
		}

		.container {

			position: relative;

			top: 20px;
		}
	</style>
	<body>
		<div class="transaction">
			<h1>Supprimer une transaction</h1>
		</div>

		<div class="container offset-lg-3">


			{{form_start(formView)}}
			<div class="form-group col-lg-8">
				{{form_row(formView.crypto)}}
			</div>
			<div class="form-group col-lg-8 ">

				{{form_widget(formView.quantity,{'attr':{
				'class':'form-control form-control-lg',
				'placeholder':'quantity'
			}})}}

				<p>{{form_errors(formView.quantity)}}</p>
			</div>
			<div class="row justify-content-center">
				<div class=" col col-lg-6 col-md-3">
					{{form_widget(formView.ajouter,{'attr':{
						'class':"btn btn-secondary col-xl-3 col-xs-12"	
					}})}}
				</div>


			</div>

			{{form_end(formView)}}
		</div>


	</body>
</html>
